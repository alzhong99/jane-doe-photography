<img src={{photo.src}} >
<h3 class='caption'>{{photo.caption}}</h3>
<p class='num-comments'>Comments: {{photo.num_comments}}</p>
{{#each comments as |comment|}}
  <div class='comment'>
    <h4>{{comment.name}}</h4>
    <p>{{comment.body}}</p>
    <button onclick={{action "deleteComment" comment.id}}>Delete</button>
  </div>
{{else}}
  <p class='comment'>No Comments</p>
{{/each}}
<form onsubmit={{action "postComment"}}>
  <h4>New Comment</h4>
  <p>
    Name:
    {{input type=text value=name}}
  </p>
  {{textarea cols=30 rows=2 value=body}}
  <button type=submit>Post</button>
</form>

{{yield}}
